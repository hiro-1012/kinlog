<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">種目を選択</h1>
        <%= link_to '戻る', new_workout_path(date: @workout.performed_on.to_s), class: 'btn btn-outline-secondary btn-sm' %>
      </div>

      <div class="card">
        <div class="card-body">
          <h4 class="card-title mb-4">
            <%= @workout.performed_on.strftime('%Y年%m月%d日') %> - <%= @category.name %>
          </h4>
          
          <p class="text-muted mb-4">トレーニングする種目を選択してください</p>

          <div class="row g-3">
            <% @exercises.each do |exercise| %>
              <div class="col-12 col-md-6">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body">
                    <h5 class="card-title"><%= exercise.name %></h5>
                    <p class="card-text text-muted small">
                      <%= @category.name %>
                    </p>
                    <%= link_to '選択', 
                        new_workout_exercise_set_path(@workout, exercise_id: exercise.id), 
                        class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-4 text-center">
            <%= link_to 'キャンセル', new_workout_path(date: @workout.performed_on.to_s), class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
