<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 mb-0">トレーニング履歴</h1>
      </div>

      <% if @workouts.any? %>
        <div class="card">
          <div class="card-header bg-light">
            <h5 class="mb-0">全期間のトレーニング記録</h5>
          </div>
          <div class="card-body p-0">
            <div class="list-group list-group-flush">
              <% @workouts.each do |workout| %>
                <div class="list-group-item">
                  <!-- ワークアウトヘッダー -->
                  <div class="d-flex justify-content-between align-items-center mb-2">
                    <h5 class="mb-0">
                      <%= link_to workout.performed_on.strftime('%Y年%m月%d日'), workout_path(workout), class: 'text-decoration-none' %>
                    </h5>
                    <div class="d-flex align-items-center gap-2">
                      <span class="badge bg-primary fs-6">
                        合計: <%= workout.total_volume.to_i %> kg
                      </span>
                      <% if user_signed_in? && workout.user_id == current_user.id %>
                        <%= link_to '削除', workout_path(workout),
                            data: { turbo_method: :delete, turbo_confirm: 'この記録を削除しますか？' },
                            class: 'btn btn-sm btn-outline-danger' %>
                      <% end %>
                    </div>
                  </div>
                  
                  <!-- セット記録一覧 -->
                  <% if workout.exercise_sets.any? %>
                    <div class="row">
                      <div class="col-12">
                        <div class="table-responsive">
                          <table class="table table-sm mb-0">
                            <thead class="table-light">
                              <tr>
                                <th>種目</th>
                                <th>部位</th>
                                <th>重量</th>
                                <th>回数</th>
                                <th>ボリューム</th>
                                <th>メモ</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% workout.exercise_sets.includes(:exercise, exercise: :category).each do |set| %>
                                <tr>
                                  <td><%= set.exercise.name %></td>
                                  <td><%= set.exercise.category.name %></td>
                                  <td><%= set.weight %> kg</td>
                                  <td><%= set.reps %> 回</td>
                                  <td><strong><%= (set.weight * set.reps).to_i %> kg</strong></td>
                                  <td><%= set.note.presence || '-' %></td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  <% else %>
                    <p class="text-muted mb-0">セット記録がありません</p>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-dumbbell fa-3x text-muted mb-3"></i>
          <h4 class="text-muted">まだトレーニング記録がありません</h4>
          <p class="text-muted">最初の記録を作成してみましょう！</p>
          <%= link_to '記録を作成', new_workout_path, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
