<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">新しいワークアウト記録</h1>
        <%= link_to '一覧へ戻る', workouts_path, class: 'btn btn-outline-secondary btn-sm' %>
      </div>

      <div class="card">
        <div class="card-body">
          <h4 class="card-title mb-4">
            <%= @workout.performed_on.strftime('%Y年%m月%d日') %> のトレーニング
          </h4>
          
          <p class="text-muted mb-4">トレーニングする部位を選択してください</p>

          <div class="row g-3">
            <% @categories.each do |category| %>
              <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm">
                  <div class="card-body text-center">
                    <div class="mb-3">
                      <i class="fas fa-dumbbell fa-2x text-primary"></i>
                    </div>
                    <h5 class="card-title"><%= category.name %></h5>
                    <p class="card-text text-muted small">
                      <%= category.exercises.count %>種類の種目
                    </p>
                    <%= link_to '選択', 
                        new_workout_exercise_set_path(@workout, category_id: category.id), 
                        class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>

          <div class="mt-4 text-center">
            <%= link_to 'キャンセル', workouts_path, class: 'btn btn-outline-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
