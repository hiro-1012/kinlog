<div class="container mt-4">
  <div class="row">
    <div class="col-12 col-lg-8 mx-auto">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">新しいワークアウト記録</h1>
        <%= link_to '一覧へ戻る', workouts_path, class: 'btn btn-outline-secondary btn-sm' %>
      </div>

      <div class="card">
        <div class="card-body">
          <%= form_with model: @workout, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :performed_on, '日付', class: 'form-label' %>
              <%= f.date_field :performed_on, class: 'form-control' %>
            </div>

            <div class="mb-3">
              <%= f.label :note, 'メモ（任意）', class: 'form-label' %>
              <%= f.text_field :note, class: 'form-control', placeholder: '今日の体調やメニューの意図など' %>
            </div>

            <div class="d-flex gap-2">
              <%= f.submit '作成する', class: 'btn btn-primary' %>
              <%= link_to 'キャンセル', workouts_path, class: 'btn btn-outline-secondary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
