<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card shadow-lg border-0">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-center mb-4">ログイン</h2>

          <% if flash[:alert].present? %>
            <div class="alert alert-danger" role="alert">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, 'メールアドレス', class: 'form-label' %>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: 'you@example.com' %>
            </div>

            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center">
                <%= f.label :password, 'パスワード', class: 'form-label mb-0' %>
                <% if devise_mapping.recoverable? %>
                  <%= link_to 'パスワードをお忘れですか？', new_password_path(resource_name), class: 'small text-decoration-none' %>
                <% end %>
              </div>
              <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: '••••••••' %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: 'form-check-input', id: 'remember_me' %>
                <%= f.label :remember_me, 'ログイン情報を記憶する', class: 'form-check-label', for: 'remember_me' %>
              </div>
            <% end %>

            <div class="d-grid mb-3">
              <%= f.submit 'ログイン', class: 'btn btn-primary btn-lg' %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <p class="mb-1">アカウントをお持ちでない方</p>
            <%= link_to '新規登録はこちら', new_registration_path(resource_name), class: 'btn btn-outline-primary' %>
          </div>
        </div>
      </div>

      <div class="text-center mt-3">
        <%= link_to 'トップページへ戻る', root_path, class: 'text-decoration-none' %>
      </div>
    </div>
  </div>
</div>
